<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange1"
    tools:context=".Activits.WelcomeScreen">

    <ImageView
        android:id="@+id/logo_app_ws"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/container_white"
        android:src="@drawable/ic_help_bot"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_top_1"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Uma nova forma de vender na suas plataformas digitais favoritas"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_app_ws" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_telephone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/image_usser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_image_pessoa"
        app:layout_constraintStart_toStartOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintEnd_toEndOf="@id/phone"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/text_1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/container_gray"
        android:gravity="center"
        android:padding="5dp"
        android:text="Edite sua loja agora"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="@id/phone"
        app:layout_constraintEnd_toEndOf="@id/phone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_women"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/container_purple"
        android:gravity="start"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:maxLength="10"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_usser"
        app:layout_constraintBottom_toTopOf="@+id/text_1"
        app:layout_constraintEnd_toEndOf="@id/phone"
        app:layout_constraintStart_toStartOf="@id/phone" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_pencil"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/edit_text"
        app:layout_constraintBottom_toBottomOf="@id/edit_text"
        app:layout_constraintEnd_toEndOf="@id/edit_text"/>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_next_btn"
        android:background="@drawable/container_white"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>